doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.static-top
      .container
        a.navbar-brand(href='#') PC Express Shop
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li(class=pageTitle=='Home' ? 'active' : undefined)
              a.nav-link(href='/')
                | Home
                span.sr-only (current)
            li.nav-item(class=pageTitle=='About' ? 'active' : undefined)
              a.nav-link(href='/about') About
            li.nav-item(class=pageTitle=='Services' ? 'active' : undefined)
              a.nav-link(href='/services') Services
            li.nav-item(class=pageTitle=='Contact' ? 'active' : undefined)
              a.nav-link(href='/contact') Contact
    .container.mt-4
      block content
      
      script(src='/javascripts/jquery-3.3.1.min.js')
      script(src='/javascripts/bootstrap.min.js')
      hr
      footer
        p PC Express &copy; 2018